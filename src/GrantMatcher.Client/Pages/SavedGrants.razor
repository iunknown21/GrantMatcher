@page "/saved"
@inject IApiClient ApiClient
@inject NavigationManager Navigation

<div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

        <!-- Header -->
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-900">Saved Grants</h1>
            <p class="text-gray-600 mt-2">
                @if (savedGrants != null && savedGrants.Any())
                {
                    <span>You have <strong>@savedGrants.Count</strong> saved Grants</span>
                }
                else if (isLoading)
                {
                    <span>Loading your saved Grants...</span>
                }
                else
                {
                    <span>You haven't saved any Grants yet</span>
                }
            </p>
        </div>

        @if (isLoading)
        {
            <div class="flex justify-center py-12">
                <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-primary-600"></div>
            </div>
        }
        else if (savedGrants == null || !savedGrants.Any())
        {
            <!-- Empty State -->
            <div class="card text-center py-12">
                <svg class="mx-auto h-16 w-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"></path>
                </svg>
                <h3 class="mt-4 text-lg font-medium text-gray-900">No Saved Grants</h3>
                <p class="mt-2 text-gray-500 max-w-md mx-auto">
                    Start exploring Grants on the dashboard and save the ones you're interested in.
                </p>
                <a href="/dashboard" class="btn-primary mt-6 inline-block">Browse Grants</a>
            </div>
        }
        else
        {
            <!-- Filter/Sort Bar -->
            <div class="mb-6 flex flex-col sm:flex-row gap-4">
                <div class="flex-1">
                    <select @bind="filterStatus" @bind:after="ApplyFilters" class="input">
                        <option value="">All Statuses</option>
                        <option value="NotStarted">Not Started</option>
                        <option value="InProgress">In Progress</option>
                        <option value="Submitted">Submitted</option>
                        <option value="Awarded">Awarded</option>
                        <option value="Declined">Declined</option>
                    </select>
                </div>
                <div class="flex-1">
                    <select @bind="sortBy" @bind:after="ApplyFilters" class="input">
                        <option value="saved">Recently Saved</option>
                        <option value="deadline">Deadline (Soonest)</option>
                        <option value="amount">Award Amount (Highest)</option>
                    </select>
                </div>
            </div>

            <!-- Saved Grants List -->
            <div class="space-y-4">
                @foreach (var saved in filteredGrants)
                {
                    <div class="card">
                        <div class="flex items-start justify-between">
                            <div class="flex-1">
                                <div class="flex items-start justify-between mb-2">
                                    <div class="flex-1">
                                        <h3 class="text-lg font-semibold text-gray-900 hover:text-primary-600">
                                            <a href="@($"/Grant/{saved.GrantId}")">
                                                @GetGrantName(saved.GrantId)
                                            </a>
                                        </h3>
                                        <p class="text-sm text-gray-600">Saved @saved.SavedAt.ToString("MMM dd, yyyy")</p>
                                    </div>

                                    <!-- Status Badge -->
                                    <span class="@GetStatusClass(saved.Status) px-3 py-1 text-sm font-medium rounded-full">
                                        @saved.Status
                                    </span>
                                </div>

                                <div class="flex flex-wrap gap-4 mb-3 text-sm">
                                    <!-- Award Amount (placeholder - would need to join with Grant data) -->
                                    <div class="flex items-center text-green-700">
                                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                        </svg>
                                        <span class="font-semibold">Grant Details</span>
                                    </div>
                                </div>

                                @if (!string.IsNullOrEmpty(saved.Notes))
                                {
                                    <div class="bg-yellow-50 border border-yellow-200 rounded p-3 mb-3">
                                        <div class="text-xs text-yellow-800 font-medium mb-1">Your Notes</div>
                                        <p class="text-sm text-yellow-900">@saved.Notes</p>
                                    </div>
                                }

                                <!-- Progress Indicators -->
                                <div class="mb-4">
                                    <div class="flex items-center justify-between text-sm mb-2">
                                        <span class="text-gray-600">Application Progress</span>
                                        <span class="text-gray-900 font-medium">@GetProgressPercentage(saved.Status)%</span>
                                    </div>
                                    <div class="w-full bg-gray-200 rounded-full h-2">
                                        <div class="@GetProgressColor(saved.Status) h-2 rounded-full transition-all duration-300"
                                             style="width: @GetProgressPercentage(saved.Status)%"></div>
                                    </div>
                                </div>

                                <!-- Action Buttons -->
                                <div class="flex gap-3">
                                    <a href="@($"/Grant/{saved.GrantId}")" class="btn-primary flex-1 text-center text-sm">
                                        View Details
                                    </a>
                                    <button @onclick="() => UpdateStatus(saved)" class="btn-secondary text-sm px-4">
                                        Update Status
                                    </button>
                                    <button @onclick="() => AddNote(saved)" class="btn-secondary text-sm px-4">
                                        @(string.IsNullOrEmpty(saved.Notes) ? "Add Note" : "Edit Note")
                                    </button>
                                    <button @onclick="() => RemoveGrant(saved)" class="btn-secondary text-sm px-4 text-red-600 hover:bg-red-50">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                        </svg>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

@code {
    private List<SavedGrant>? savedGrants;
    private List<SavedGrant>? filteredGrants;
    private bool isLoading = true;

    private string filterStatus = "";
    private string sortBy = "saved";

    protected override async Task OnInitializedAsync()
    {
        await LoadSavedGrants();
    }

    private async Task LoadSavedGrants()
    {
        try
        {
            isLoading = true;

            // TODO: Implement API endpoint to get saved Grants
            // For now, create mock data
            savedGrants = new List<SavedGrant>();
            filteredGrants = savedGrants;

            ApplyFilters();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading saved Grants: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ApplyFilters()
    {
        if (savedGrants == null)
            return;

        var filtered = savedGrants.AsEnumerable();

        // Filter by status
        if (!string.IsNullOrEmpty(filterStatus))
        {
            if (Enum.TryParse<ApplicationStatus>(filterStatus, out var status))
            {
                filtered = filtered.Where(s => s.Status == status);
            }
        }

        // Sort
        filtered = sortBy switch
        {
            "deadline" => filtered.OrderBy(s => s.SavedAt), // TODO: Sort by actual deadline when we have Grant data
            "amount" => filtered.OrderByDescending(s => s.SavedAt), // TODO: Sort by actual amount
            _ => filtered.OrderByDescending(s => s.SavedAt)
        };

        filteredGrants = filtered.ToList();
    }

    private string GetGrantName(Guid GrantId)
    {
        // TODO: Look up Grant name from cache or API
        return "Grant Name";
    }

    private string GetStatusClass(ApplicationStatus status)
    {
        return status switch
        {
            ApplicationStatus.NotStarted => "bg-gray-100 text-gray-800",
            ApplicationStatus.InProgress => "bg-blue-100 text-blue-800",
            ApplicationStatus.Submitted => "bg-purple-100 text-purple-800",
            ApplicationStatus.Awarded => "bg-green-100 text-green-800",
            ApplicationStatus.Declined => "bg-red-100 text-red-800",
            _ => "bg-gray-100 text-gray-800"
        };
    }

    private int GetProgressPercentage(ApplicationStatus status)
    {
        return status switch
        {
            ApplicationStatus.NotStarted => 0,
            ApplicationStatus.InProgress => 50,
            ApplicationStatus.Submitted => 75,
            ApplicationStatus.Awarded => 100,
            ApplicationStatus.Declined => 100,
            _ => 0
        };
    }

    private string GetProgressColor(ApplicationStatus status)
    {
        return status switch
        {
            ApplicationStatus.Awarded => "bg-green-600",
            ApplicationStatus.Declined => "bg-red-600",
            ApplicationStatus.Submitted => "bg-purple-600",
            ApplicationStatus.InProgress => "bg-blue-600",
            _ => "bg-gray-400"
        };
    }

    private void UpdateStatus(SavedGrant saved)
    {
        // TODO: Implement status update dialog/modal
        Console.WriteLine($"Update status for {saved.GrantId}");
    }

    private void AddNote(SavedGrant saved)
    {
        // TODO: Implement note dialog/modal
        Console.WriteLine($"Add/edit note for {saved.GrantId}");
    }

    private async Task RemoveGrant(SavedGrant saved)
    {
        // TODO: Implement confirmation dialog and API call
        savedGrants?.Remove(saved);
        ApplyFilters();
        StateHasChanged();
    }
}
