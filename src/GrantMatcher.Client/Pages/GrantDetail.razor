@page "/Grant/{id:guid}"
@inject IApiClient ApiClient
@inject NavigationManager Navigation

<div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">

        @if (isLoading)
        {
            <div class="flex justify-center py-12">
                <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-primary-600"></div>
            </div>
        }
        else if (Grant == null)
        {
            <div class="card text-center py-12">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                <h3 class="mt-2 text-lg font-medium text-gray-900">Grant Not Found</h3>
                <p class="mt-1 text-gray-500">This Grant may have been removed or the link is incorrect.</p>
                <a href="/dashboard" class="btn-primary mt-4 inline-block">Back to Dashboard</a>
            </div>
        }
        else
        {
            <!-- Back Button -->
            <button @onclick="GoBack" class="flex items-center text-gray-600 hover:text-gray-900 mb-6">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
                Back to Dashboard
            </button>

            <!-- Header Card -->
            <div class="card mb-6">
                <div class="flex items-start justify-between mb-4">
                    <div class="flex-1">
                        <h1 class="text-3xl font-bold text-gray-900 mb-2">@Grant.Name</h1>
                        <p class="text-lg text-gray-600">@Grant.Agency</p>
                        @if (!string.IsNullOrEmpty(Grant.OpportunityNumber))
                        {
                            <p class="text-sm text-gray-500 mt-1">Opportunity #@Grant.OpportunityNumber</p>
                        }
                    </div>
                    @if (matchScore.HasValue)
                    {
                        <MatchScoreBadge Score="matchScore.Value" />
                    }
                </div>

                <!-- Key Stats -->
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
                    <!-- Award Range -->
                    <div class="bg-green-50 rounded-lg p-4">
                        <div class="text-sm text-green-700 mb-1">Award Range</div>
                        <div class="text-2xl font-bold text-green-900">
                            @if (Grant.AwardFloor.HasValue && Grant.AwardCeiling.HasValue)
                            {
                                <span>@Grant.AwardFloor.Value.ToString("C0") - @Grant.AwardCeiling.Value.ToString("C0")</span>
                            }
                            else if (Grant.AwardCeiling.HasValue)
                            {
                                <span>Up to @Grant.AwardCeiling.Value.ToString("C0")</span>
                            }
                            else if (Grant.AwardFloor.HasValue)
                            {
                                <span>@Grant.AwardFloor.Value.ToString("C0")+</span>
                            }
                            else
                            {
                                <span>Varies</span>
                            }
                        </div>
                    </div>

                    <!-- Deadline -->
                    <div class="bg-blue-50 rounded-lg p-4">
                        <div class="text-sm text-blue-700 mb-1">Close Date</div>
                        @if (Grant.CloseDate.HasValue)
                        {
                            <div class="text-xl font-bold text-blue-900">@Grant.CloseDate.Value.ToString("MMM dd, yyyy")</div>
                            <DeadlineCountdown Deadline="Grant.CloseDate.Value" />
                        }
                        else
                        {
                            <div class="text-xl font-bold text-blue-900">Rolling</div>
                        }
                    </div>

                    <!-- Expected Awards -->
                    <div class="bg-purple-50 rounded-lg p-4">
                        <div class="text-sm text-purple-700 mb-1">Expected Awards</div>
                        @if (Grant.ExpectedNumberOfAwards.HasValue)
                        {
                            <div class="text-2xl font-bold text-purple-900">@Grant.ExpectedNumberOfAwards.Value</div>
                            <div class="text-xs text-purple-600 mt-1">Grants expected</div>
                        }
                        else
                        {
                            <div class="text-xl font-bold text-purple-900">Not specified</div>
                        }
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="flex gap-3">
                    <a href="@Grant.ApplicationUrl" target="_blank" class="btn-primary flex-1 text-center">
                        Apply Now
                        <svg class="w-4 h-4 ml-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                        </svg>
                    </a>
                    <button @onclick="ToggleSave" class="btn-secondary px-6">
                        <svg class="w-5 h-5 @(isSaved ? "fill-current" : "")" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"></path>
                        </svg>
                    </button>
                </div>
            </div>

            <!-- Description -->
            <div class="card mb-6">
                <h2 class="text-xl font-semibold text-gray-900 mb-4">About This Grant</h2>
                <p class="text-gray-700 leading-relaxed">@Grant.Description</p>
            </div>

            <!-- Eligibility Requirements -->
            <div class="card mb-6">
                <h2 class="text-xl font-semibold text-gray-900 mb-4">Eligibility Requirements</h2>
                <EligibilityCheckList Grant="Grant" NonprofitProfile="NonprofitProfile" />
            </div>

            <!-- Grant Details -->
            <div class="card mb-6">
                <h2 class="text-xl font-semibold text-gray-900 mb-4">Grant Details</h2>
                <div class="space-y-3">
                    @if (!string.IsNullOrEmpty(Grant.FundingInstrument))
                    {
                        <div class="flex items-start">
                            <svg class="w-5 h-5 text-blue-600 mr-3 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                            </svg>
                            <div>
                                <div class="font-medium text-gray-900">Funding Instrument</div>
                                <div class="text-sm text-gray-600">@Grant.FundingInstrument</div>
                            </div>
                        </div>
                    }

                    @if (Grant.ApplicantTypes?.Any() == true)
                    {
                        <div class="flex items-start">
                            <svg class="w-5 h-5 text-green-600 mr-3 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                            </svg>
                            <div>
                                <div class="font-medium text-gray-900">Eligible Applicants</div>
                                <div class="text-sm text-gray-600">@string.Join(", ", Grant.ApplicantTypes)</div>
                            </div>
                        </div>
                    }

                    @if (Grant.FundingCategories?.Any() == true)
                    {
                        <div class="flex items-start">
                            <svg class="w-5 h-5 text-purple-600 mr-3 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                            </svg>
                            <div>
                                <div class="font-medium text-gray-900">Funding Categories</div>
                                <div class="text-sm text-gray-600">@string.Join(", ", Grant.FundingCategories)</div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Additional Information -->
            <div class="card">
                <h2 class="text-xl font-semibold text-gray-900 mb-4">Additional Information</h2>
                <dl class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <dt class="text-sm font-medium text-gray-500">Agency</dt>
                        <dd class="mt-1 text-sm text-gray-900">@Grant.Agency</dd>
                    </div>
                    @if (!string.IsNullOrEmpty(Grant.OpportunityNumber))
                    {
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Opportunity Number</dt>
                            <dd class="mt-1 text-sm text-gray-900">@Grant.OpportunityNumber</dd>
                        </div>
                    }
                    @if (Grant.ExpectedNumberOfAwards.HasValue)
                    {
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Expected Awards</dt>
                            <dd class="mt-1 text-sm text-gray-900">@Grant.ExpectedNumberOfAwards.Value</dd>
                        </div>
                    }
                    @if (Grant.CloseDate.HasValue)
                    {
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Close Date</dt>
                            <dd class="mt-1 text-sm text-gray-900">@Grant.CloseDate.Value.ToString("MMMM dd, yyyy")</dd>
                        </div>
                    }
                </dl>
            </div>
        }
    </div>
</div>

@code {
    [Parameter]
    public Guid Id { get; set; }

    private GrantEntity? Grant;
    private NonprofitProfile? NonprofitProfile;
    private int? matchScore;
    private bool isLoading = true;
    private bool isSaved = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadGrant();
        // TODO: Load Nonprofit profile from auth context
        // TODO: Check if Grant is saved
    }

    private async Task LoadGrant()
    {
        try
        {
            isLoading = true;
            Grant = await ApiClient.GetGrantAsync(Id);

            // TODO: Calculate match score if we have Nonprofit profile
            // matchScore = CalculateMatchScore(NonprofitProfile, Grant);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading Grant: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/dashboard");
    }

    private void ToggleSave()
    {
        isSaved = !isSaved;
        // TODO: Implement actual save/unsave API call
        Console.WriteLine($"Grant {Id} saved: {isSaved}");
    }
}
